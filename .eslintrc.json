{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": [
      "warn",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "comma-dangle": [
      "warn",
      "never"
    ],
    "for-direction": [
      "error"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "indent": [
      "warn",
      2,
      {
        "VariableDeclarator": {
          "var": 2,
          "let": 2,
          "const": 3
        },
        "SwitchCase": 1
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 82,
        "tabWidth": 2,
        "comments": 100,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "no-mixed-spaces-and-tabs": [
      "error"
    ],
    "no-multi-spaces": [
      "error",
      {
        "ignoreEOLComments": true,
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "no-tabs": [
      "error"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-unneeded-ternary": [
      "error",
      {
        "defaultAssignment": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "local"
      }
    ],
    "no-var": "off",
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "one-var": "off",
    // [
    //     "warn",
    //     {
    //         "separateRequires": true,
    //         "var": "always",
    //         "let": "consecutive"
    //     }
    // ],
    "one-var-declaration-per-line": [
      "warn",
      "initializations"
    ],
    "operator-linebreak": [
      "warn",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "prefer-rest-params": "off",
    "require-jsdoc": 0,
    "semi": [
      "warn",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "exceptions": [
            "?"
          ]
        }
      }
    ]
  }
}
